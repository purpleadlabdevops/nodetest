<html lang="en">
<%- include('header'); -%>
<%- include('container'); -%>
  <div class="jumbotron">
	<h1>Deal Form</h1>
	
	<div class="panel-body" >
					<form class="form-horizontal" role="form" method="post" action="/home/signupdeal">
						
						<% if (message.length > 0) { %>
						<div class="alert alert-success col-sm-12"><%= message %></div>
						<% } %>
						
						<div id="signupalert" style="display:none" class="alert alert-danger">
							<p>Error:</p>
							<span></span>
						</div>
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="text" class="form-control" name="deal_title" placeholder="Deal title">
							</div>
						</div>
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="text" class="form-control" name="company_name" placeholder="Company name">
							</div>
						</div>
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="text" class="form-control" name="client_name" placeholder="Client name">
							</div>
						</div>
						
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="phone" class="form-control" name="client_phone" placeholder="Client phone">
							</div>
						</div>
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="text" class="form-control" name="client_email" placeholder="Client email">
							</div>
						</div>		
						<div class="form-group">
							
							<div class="col-md-9">
								<input type="text" class="form-control" name="offer_cost" placeholder="Offer Cost">
							</div>
						</div>						
						<div class="form-group">						            
							<div class="col-md-offset-3 col-md-9">
								<button id="btn-signup" type="submit" class="btn btn-info"><i class="icon-hand-right"></i> &nbsp Send dial</button>
							</div>
						</div>
					</form>
					<div>
						<table id="table" >  
				        <thead>  
				            <tr>  
				                <th>Deal title</th>  
				                <th>Offer Cost</th>
				                <th>Company name</th>
				                <th>Client name</th>
				                <th>Client phone</th>
				                <th>Client email</th>  
				            </tr>  
				        </thead>  
				         <tbody> 
				          
				         <% data.forEach(function(rows){ %>
				            <tr>  
				                <td><%= rows.deal_title %></td>  
				                <td><%= rows.offer_cost %></td>
				                <td><%= rows.company_name %></td>  
				                <td><%= rows.client_name %></td>
				                <td><%= rows.client_phone %></td>
				                <td><%= rows.client_email %></td>
				                <td>		
				                <% if (message.length > 0) { %>
						<div class="alert alert-success col-sm-12"><%= message %></div>
						<% } %>		            
				                    <form action="/dealdelete" method="POST" style="display:inline;">
				                    	<input type="hidden" name="dealid" value="<%= rows.id %>" />
				                        <input type="submit" value="Delete" />
				                    </form>
				                </td>
				            </tr>                                   
				         <% }) %>
				         	
				         </tbody>
    				</table> 
				</div>
  </div>
<%- include('footer'); -%>